<!DOCTYPE html>
<html>
  <head>
    <title>Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="login-bg d-flex align-items-center justify-content-center min-vh-100">
    <% var error = typeof error !== 'undefined' ? error : null; %>
    <div class="login-container">
      <div class="login-card card shadow-lg">
        <div class="login-header card-header text-center py-4">
          <div class="login-avatar mx-auto mb-2">
            <i class="bi bi-person-plus-fill"></i>
          </div>
          <h2 class="mb-1 fw-bold login-title">Create Account</h2>
          <p class="mb-2 small text-white-50">Join Our Chatroom</p>
          <% if (error) { %>
            <div class="alert alert-danger animated-alert fade show py-2 px-3 mb-2" role="alert">
              <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
            </div>
          <% } %>
        </div>
        <div class="card-body p-5">
          <form action="/signup" method="POST" id="signupForm" autocomplete="on">
            <div class="mb-3">
              <label class="form-label fw-bold login-label">
                <i class="bi bi-envelope-fill"></i> Email Address
              </label>
              <input type="email" id="email" name="email" class="form-control form-control-lg login-input" placeholder="Enter your email" required autocomplete="username" />
              <small id="emailError" class="text-danger"></small>
            </div>
            <div class="mb-3">
              <label class="form-label fw-bold login-label">
                <i class="bi bi-person-fill"></i> First Name
              </label>
              <input type="text" id="firstName" name="firstName" class="form-control form-control-lg login-input" placeholder="Enter first name" required />
              <small id="firstNameError" class="text-danger"></small>
            </div>
            <div class="mb-3">
              <label class="form-label fw-bold login-label">
                <i class="bi bi-person-fill"></i> Last Name
              </label>
              <input type="text" id="lastName" name="lastName" class="form-control form-control-lg login-input" placeholder="Enter last name" required />
              <small id="lastNameError" class="text-danger"></small>
            </div>
            <button type="submit" class="btn btn-gradient btn-lg w-100 mb-2">
              <i class="bi bi-check-circle"></i> Next
            </button>
          </form>
          <div class="text-center mt-4">
            <span class="text-muted">Already have an account?</span>
            <a href="/login" class="text-decoration-none fw-bold login-link">
              <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/signup-validation.js"></script>
  </body>
</html>
