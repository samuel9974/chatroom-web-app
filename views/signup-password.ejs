<!DOCTYPE html>
<html>
  <head>
    <title>Set Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body class="login-bg d-flex align-items-center justify-content-center min-vh-100">
    <% var error = typeof error !== 'undefined' ? error : null; %>
    <div class="login-container">
      <div class="login-card card shadow-lg">
        <div class="login-header card-header text-center py-4">
          <div class="login-avatar mx-auto mb-2">
            <i class="bi bi-key-fill"></i>
          </div>
          <h2 class="mb-1 fw-bold login-title">Secure Password</h2>
          <p class="mb-2 small text-white-50">Complete Your Registration</p>
          <% if (error) { %>
            <div class="alert alert-danger animated-alert fade show py-2 px-3 mb-2" role="alert">
              <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
            </div>
          <% } %>
        </div>
        <div class="card-body p-5">
          <form action="/signup-password" method="POST" id="passwordForm" autocomplete="on">
            <div class="mb-3">
              <label class="form-label fw-bold login-label">
                <i class="bi bi-lock-fill"></i> Password
              </label>
              <div class="input-group input-group-lg">
                <input type="password" id="password" name="password" class="form-control login-input" placeholder="Enter a strong password" required />
                <button type="button" id="togglePassword" class="btn btn-outline-secondary login-eye-btn" title="Show/Hide password">
                  <i class="bi bi-eye-fill"></i>
                </button>
              </div>
              <small id="passwordError" class="text-danger"></small>
              <div class="mt-2" id="passwordStrength">
                <small class="d-block"><span id="uppercase" class="text-muted">✓ Uppercase (A-Z)</span></small>
                <small class="d-block"><span id="lowercase" class="text-muted">✓ Lowercase (a-z)</span></small>
                <small class="d-block"><span id="numbers" class="text-muted">✓ Numbers (0-9)</span></small>
                <small class="d-block"><span id="special" class="text-muted">✓ Special chars (!@#$%^&*)</span></small>
                <small class="d-block"><span id="length" class="text-muted">✓ At least 8 characters</span></small>
              </div>
            </div>
            <div class="mb-4">
              <label class="form-label fw-bold login-label">
                <i class="bi bi-lock-fill"></i> Confirm Password
              </label>
              <div class="input-group input-group-lg">
                <input type="password" id="confirmPassword" name="confirmPassword" class="form-control login-input" placeholder="Confirm your password" required />
                <button type="button" id="toggleConfirmPassword" class="btn btn-outline-secondary login-eye-btn" title="Show/Hide password">
                  <i class="bi bi-eye-fill"></i>
                </button>
              </div>
              <small id="confirmPasswordError" class="text-danger"></small>
            </div>
            <button type="submit" class="btn btn-gradient btn-lg w-100 mb-2">
              <i class="bi bi-check-circle"></i> Complete Registration
            </button>
            <button type="button" id="backBtn" class="btn btn-outline-primary btn-lg w-100">
              <i class="bi bi-arrow-left"></i> Back
            </button>
          </form>
          <div class="text-center mt-4">
            <span class="text-muted">Already have an account?</span>
            <a href="/login" class="text-decoration-none fw-bold login-link">
              <i class="bi bi-box-arrow-in-right"></i> Login
            </a>
          </div>
        </div>
      </div>
    </div>
    <!-- Password toggle logic is handled by password-validation.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/password-validation.js"></script>
  </body>
</html>
